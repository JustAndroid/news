<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/relativeLayout"

   >

    <TextView
        android:id="@+id/web_title_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
       android:layout_toRightOf="@+id/image_close"
        android:layout_toLeftOf="@+id/image_share"
        android:layout_toStartOf="@+id/image_share"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:gravity="center"
        tools:ignore="UnusedAttribute"
        android:layout_margin="8dp" /> />

    <ImageButton
        android:id="@+id/image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@null"
        android:src="@drawable/ic_action_navigation_close"
         />


    <ImageButton
        android:id="@+id/image_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:src="@drawable/ic_action_social_share_black"
        />


</RelativeLayout><!-- From: file:/D:/AllNews/AllBuilds/novUA/src/main/res/layout/web_action_bar.xml -->