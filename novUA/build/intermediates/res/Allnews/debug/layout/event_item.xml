<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:fillViewport="true">

	<LinearLayout
		android:id="@+id/eventContentLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">


		<ImageView
			android:id="@+id/eventImg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter" />

		<LinearLayout
			android:id="@+id/eventPriceLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/grey"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/eventPrice"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="20dp"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="18sp"
				android:textStyle="bold" />

			<Button
				android:id="@+id/eventBuyBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="20dp"
				android:background="@drawable/btn_buy_event_bg"
				android:paddingLeft="20dp"
				android:paddingRight="20dp"
				android:text="@string/event_buy"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/eventAddress"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="10dp"
				android:layout_weight="1"
				android:drawableLeft="@drawable/ic_big_location"
				android:drawablePadding="3dip"
				android:maxLines="2" />

			<LinearLayout
				android:layout_width="1dp"
				android:layout_height="fill_parent"
				android:layout_margin="10dp"
				android:background="@color/grey"
				android:orientation="vertical"></LinearLayout>

			<TextView
				android:id="@+id/eventDirections"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:drawableTop="@drawable/ic_directions"
				android:gravity="center"
				android:lines="1"
				android:padding="10dp"
				android:text="@string/event_directions" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:background="@color/grey"
			android:orientation="vertical"></LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/eventTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="10dp"
				android:layout_weight="1"
				android:drawableLeft="@drawable/ic_big_calendar"
				android:drawablePadding="3dip"
				android:maxLines="2" />

			<LinearLayout
				android:layout_width="1dp"
				android:layout_height="fill_parent"
				android:layout_margin="10dp"
				android:background="@color/grey"
				android:orientation="vertical"></LinearLayout>

			<TextView
				android:id="@+id/eventCalendar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:drawableTop="@drawable/ic_add_to_calendar"
				android:gravity="center"
				android:lines="1"
				android:padding="10dp"
				android:text="@string/event_calendar" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:background="@color/grey"
			android:orientation="vertical"></LinearLayout>

		<TextView
			android:id="@+id/eventAboutTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="20dp"
			android:text="@string/event_about"
			android:textColor="@color/black"
			android:textSize="18sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/eventAbout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:textColor="@color/black" />


	</LinearLayout>
</ScrollView><!-- From: file:/D:/AllNews/AllBuilds/novUA/src/main/res/layout/event_item.xml -->