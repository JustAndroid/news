<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayoutTop"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/drawerItemDonate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_drawer_donate"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/menu_donate"
        android:textColor="@color/drawerItem"
        android:textSize="@dimen/drawer_item_text_size"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/drawerDivider0"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/drawerDivider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/drawerItemRefresh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_drawer_refresh"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/menu_update"
        android:textColor="@color/drawerItem"
        android:visibility="gone"
        android:textSize="@dimen/drawer_item_text_size" />


    <LinearLayout
        android:id="@+id/drawerDivider1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/drawerDivider"
        android:orientation="vertical"
        android:visibility="gone">
    </LinearLayout>

    <TextView
        android:id="@+id/drawerItemShare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_drawer_share"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/menu_share_app"
        android:textColor="@color/drawerItem"
        android:textSize="@dimen/drawer_item_text_size" />

    <LinearLayout
        android:id="@+id/drawerDivider2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/drawerDivider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/drawerItemSources"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_drawer_sources"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/menu_sources"
        android:textColor="@color/drawerItem"
        android:textSize="@dimen/drawer_item_text_size"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/drawerDivider3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/drawerDivider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/drawerItemClean"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_drawer_clean"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/menu_clean_cache"
        android:textColor="@color/drawerItem"
        android:textSize="@dimen/drawer_item_text_size" />

    <LinearLayout
        android:id="@+id/drawerDivider4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/drawerDivider"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/drawerItemBookmark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_drawer_bookmark"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/menu_mark"
        android:textColor="@color/drawerItem"
        android:textSize="@dimen/drawer_item_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/drawerItemSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_drawer_search"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/menu_search"
        android:textColor="@color/drawerItem"
        android:textSize="@dimen/drawer_item_text_size"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/drawerDivider5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/drawerDivider"
        android:orientation="vertical"
        android:visibility="visible" >

    </LinearLayout>

    <TextView
        android:id="@+id/drawerItemSettings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_drawer_settings"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/menu_settings"
        android:textColor="@color/drawerItem"
        android:textSize="@dimen/drawer_item_text_size"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/drawerDivider6"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/drawerDivider"
        android:orientation="vertical"
        android:visibility="visible">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawerDivider7"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/drawerDivider"
        android:orientation="vertical"
        android:visibility="gone">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawerLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/drawerBottomColorDay"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/drawerItemColorTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/menu_color_mode"
                android:textColor="@color/drawerItem"
                android:textSize="@dimen/drawer_item_text_size" />

            <LinearLayout
                android:id="@+id/drawerItemColorStroke"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_innews_share_btn_norm"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/drawerItemColorNight"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/bgActionBarDay"
                    android:gravity="center"
                    android:minWidth="70dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/menu_color_night"
                    android:textColor="@color/white"
                    android:textSize="@dimen/drawer_item_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/drawerItemColorDay"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:minWidth="70dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/menu_color_day"
                    android:textColor="@color/bgActionBarDay"
                    android:textSize="@dimen/drawer_item_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/drawerDivider8"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/drawerDivider"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/drawerItemViewModeTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/menu_view"
                android:textColor="@color/drawerItem"
                android:textSize="@dimen/drawer_item_text_size" />

            <LinearLayout
                android:id="@+id/drawerItemViewModeStroke"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_innews_share_btn_norm"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/drawerItemViewMode1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:minWidth="70dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/small_image_view_icon_blue" />

                <ImageView
                    android:id="@+id/drawerItemViewMode2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/bgActionBarDay"
                    android:minWidth="70dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/list_view_white" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>