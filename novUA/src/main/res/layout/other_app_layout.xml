<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <include
            android:id="@+id/download_app_layout3"
            layout="@layout/download_app_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/txtGrey"
            android:orientation="vertical"></LinearLayout>

        <include
            android:id="@+id/download_app_layout4"
            layout="@layout/download_app_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/txtGrey"
            android:orientation="vertical"></LinearLayout>

        <include
            android:id="@+id/download_app_layout1"
            layout="@layout/download_app_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/txtGrey"
            android:orientation="vertical"></LinearLayout>

        <include
            android:id="@+id/download_app_layout2"
            layout="@layout/download_app_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/txtGrey"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>

        <include
            android:id="@+id/download_app_layout5"
            layout="@layout/download_app_item"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
